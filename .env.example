PORT=3001

# Postgres (Supabase) connection - use Supabase connection string (postgres)
PG_CONNECTION=postgresql://<db_user>:<db_pass>@db.<project-ref>.supabase.co:5432/postgres

# OR you can use PG via the Supabase connection string
# Example: postgresql://postgres:password@db.your-supabase-ref.supabase.co:5432/postgres

# Email (SMTP)
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=465
SMTP_USER=you@yourdomain.com
SMTP_PASS=your_smtp_password
EMAIL_FROM="Obliqware <no-reply@yourdomain.com>"

# JWT secret to sign tokens (keep secret)
JWT_SECRET=some_long_random_string_here
JWT_EXPIRES_IN=7d         # cookie lifetime (e.g., 7d)

# OTP settings
OTP_TTL_MINUTES=10
OTP_LENGTH=6

# Cors origin for frontend
FRONTEND_ORIGIN=http://localhost:5173
